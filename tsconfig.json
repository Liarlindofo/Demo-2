{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "scripts/vercel-build.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "backend",
    "backend/**/*",
    "**/backend/**/*",
    "scripts/test-*.ts",
    "scripts/check-*.ts",
    "scripts/create-*.ts",
    "scripts/fix-*.ts",
    "scripts/init-*.ts",
    "scripts/migrate-*.ts",
    "scripts/backfill-*.ts",
    "scripts/clean-*.ts",
    "scripts/remove-*.ts"
  ]
}

